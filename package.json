{
  "name": "Firagate",
  "version": "1.0.0",
  "description": "\"# firagate\"",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc --build ./tsconfig.project.json",
    "run": "npm run build && pm2 restart build/index.js --name \"Firagate\" --time && pm2 save",
    "clean": "npm run clean -ws",
    "dev": "npm-run-all build --parallel dev:*",
    "dev:backend": "cd packages/backend && npm run dev",
    "dev:invoice-client": "cd packages/invoice-client && npm run dev",
    "prettier-format": "prettier --config prettier.config.js 'packages/*/src/**/*{.ts,.tsx,.js,.jsx}' --write"
  },
  "author": "dilan-dio4",
  "license": "ISC",
  "devDependencies": {
    "@types/big.js": "^6.1.3",
    "@types/multicoin-address-validator": "^0.5.0",
    "@types/node": "^14.14.25",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "eslint": "^7.19.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "shx": "^0.3.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "big.js": "^6.2.0"
  }
}
