{
  "name": "Snow",
  "version": "1.0.0",
  "description": "\"# snow\"",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc --build ./tsconfig.project.json",
    "run": "npm run build && pm2 restart build/index.js --name \"Snow\" --time && pm2 save",
    "clean": "npm run clean -ws",
    "dev": "npm-run-all build --parallel dev:backend dev:invoice-client",
    "dev:backend": "cd packages/backend && npm run dev",
    "dev:invoice-client": "cd packages/invoice-client && npm run dev"
  },
  "author": "dilan-dio4",
  "license": "ISC",
  "devDependencies": {
    "@types/multicoin-address-validator": "^0.5.0",
    "@types/node": "^14.14.25",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "eslint": "^7.19.0",
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.4",
    "typescript": "^4.1.3"
  }
}
